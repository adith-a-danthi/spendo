<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.pushkaranand.spendo">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".Spendo"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- Activities -->
        <activity
            android:name=".ui.IntroSliderActivity"
            android:theme="@style/AppTheme.Intro" />
        <activity
            android:name=".ui.activities.home.HomeActivity"
            android:label="@string/title_activity_home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.NewTransactionActivity"
            android:label="@string/title_activity_new_transaction"
            android:parentActivityName=".ui.activities.home.HomeActivity"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".ui.ViewTransactionActivity"
            android:parentActivityName=".ui.activities.home.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.home.HomeActivity" />
        </activity>
        <activity android:name=".ui.CategoryDisplayActivity" />
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.activities.home.HomeActivity"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".ui.EditTransactionActivity"
            android:label="@string/title_activity_edit_transaction"
            android:parentActivityName=".ui.ViewTransactionActivity"
            android:theme="@style/AppTheme.ActionBar" />
        <activity android:name=".ui.AboutActivity" />

        <!-- Services -->
        <service
            android:name=".services.jobs.DailyAddTransactionReminder"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
        <service
            android:name=".services.jobs.BackupToDeviceJob"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
        <service
            android:name=".services.jobs.BackupToDriveJob"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
        <service
            android:name=".services.jobs.MonthlyResetJob"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
        <service android:name=".services.MonthlyResetJobIntentService" />

    </application>

</manifest>