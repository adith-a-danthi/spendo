<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.pushkaranand.spendo">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- Activities -->
        <activity android:name=".ui.IntroSliderActivity" />
        <activity
            android:name=".ui.HomeActivity"
            android:label="@string/title_activity_home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.NewTransactionActivity"
            android:label="@string/title_activity_new_transaction"
            android:theme="@style/AppTheme.ActionBar" />
        <activity android:name=".ui.ViewTransactionActivity" />
        <activity android:name=".ui.CategoryDisplayActivity" />
        <activity android:name=".ui.SettingsActivity"></activity>
    </application>

</manifest>